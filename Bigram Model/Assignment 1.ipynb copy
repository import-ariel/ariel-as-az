   "source": [
    "# Reloading the file\n",
    "ref_text = open(\"text.txt\").read()\n",
    "\n",
    "# Removing \\n from file and replacing them where I see ?, !, ., .\", ?\", and !\"\n",
    "ref_text_a = ref_text.replace('\\n','').replace(\"!\", '\\n').replace(\"?\",'\\n').replace(\".\",'\\n').replace('.\"','\\n').replace('?\"','\\n').replace('!\"','\\n')"
   ]
  },
